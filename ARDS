    <footer class="bg-white mt-16 border-t">
        <div class="container mx-auto py-6 px-4 sm:px-6 lg:px-8 text-center text-gray-500">
            <p>&copy; 2024 ARDS Clinical Dashboard. For educational purposes only.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            const chartLabelColor = '#3D405B';
            const chartGridColor = 'rgba(0, 0, 0, 0.05)';

            const wrapText = (ctx, text, x, y, maxWidth, lineHeight) => {
                const words = text.split(' ');
                let line = '';
                for (let n = 0; n < words.length; n++) {
                    const testLine = line + words[n] + ' ';
                    const metrics = ctx.measureText(testLine);
                    const testWidth = metrics.width;
                    if (testWidth > maxWidth && n > 0) {
                        ctx.fillText(line, x, y);
                        line = words[n] + ' ';
                        y += lineHeight;
                    } else {
                        line = testLine;
                    }
                }
                ctx.fillText(line, x, y);
            };

            Chart.Tooltip.positioners.custom = function(items) {
                if (!items.length) {
                    return false;
                }
                const pos = this.getAveragePosition(items);
                return {
                    x: pos.x,
                    y: pos.y,
                };
            };

            const etiologyCtx = document.getElementById('etiologyChart')?.getContext('2d');
            if (etiologyCtx) {
                new Chart(etiologyCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Sepsis', 'Pneumonia', 'Aspiration', 'Trauma', 'Other'],
                        datasets: [{
                            label: 'ARDS Causes',
                            data: [32, 23, 15, 10, 20],
                            backgroundColor: ['#E76F51', '#F4A261', '#E9C46A', '#2A9D8F', '#264653'],
                            borderColor: '#F8F7F4',
                            borderWidth: 4,
                            hoverOffset: 8
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    color: chartLabelColor,
                                    font: { family: "'Inter', sans-serif" }
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return `${context.label}: ${context.raw}%`;
                                    }
                                },
                                bodyFont: { family: "'Inter', sans-serif", size: 14 },
                                titleFont: { family: "'Inter', sans-serif", size: 16 },
                            }
                        }
                    }
                });
            }

            const picsCtx = document.getElementById('picsChart')?.getContext('2d');
            if (picsCtx) {
                new Chart(picsCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Physical Impairment', 'Cognitive Impairment', 'Mental Health Issues'],
                        datasets: [{
                            label: 'Prevalence in Survivors (%)',
                            data: [50, 71, 44],
                            backgroundColor: ['#2A9D8F', '#E9C46A', '#F4A261'],
                            borderRadius: 4
                        }]
                    },
                    options: {
                        indexAxis: 'y',
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            x: {
                                beginAtZero: true,
                                max: 100,
                                grid: { color: chartGridColor },
                                ticks: { color: chartLabelColor, font: { family: "'Inter', sans-serif" } }
                            },
                            y: {
                                grid: { display: false },
                                ticks: { color: chartLabelColor, font: { family: "'Inter', sans-serif", size: 14 } }
                            }
                        },
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        let label = context.dataset.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.parsed.x !== null) {
                                            label += context.parsed.x + '%';
                                        }
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            }

            const accordionItems = document.querySelectorAll('.accordion-item');
            accordionItems.forEach(item => {
                const header = item.querySelector('.accordion-header');
                const content = item.querySelector('.accordion-content');
                const icon = item.querySelector('.accordion-icon');
                header.addEventListener('click', () => {
                    const isOpen = content.style.maxHeight;
                    if (isOpen) {
                        content.style.maxHeight = null;
                        icon.classList.remove('rotate-45');
                    } else {
                        content.style.maxHeight = content.scrollHeight + 'px';
                        icon.classList.add('rotate-45');
                    }
                });
            });

            const phaseData = {
                exudative: 'Characterized by diffuse alveolar damage. An influx of inflammatory cells and protein-rich fluid into the alveoli leads to non-cardiogenic pulmonary edema, formation of hyaline membranes, and severe impairment of gas exchange.',
                proliferative: 'The body attempts to repair the damage. Type II pneumocytes proliferate to replace damaged cells, and fibroblasts migrate into the alveolar space, beginning the process of laying down collagen.',
                fibrotic: 'In some patients, the repair process becomes dysregulated, leading to extensive collagen deposition and pulmonary fibrosis. This remodels the lung architecture, causing long-term respiratory impairment.'
            };
            const phases = document.querySelectorAll('.phase');
            const phaseDescription = document.getElementById('phase-description');

            const updatePhase = (activePhase) => {
                phases.forEach(p => p.classList.remove('active'));
                activePhase.classList.add('active');
                phaseDescription.textContent = phaseData[activePhase.dataset.phase];
            };

            phases.forEach(phase => {
                phase.addEventListener('click', () => updatePhase(phase));
            });
            updatePhase(document.querySelector('.phase.active'));

            const tabBtns = document.querySelectorAll('.tab-btn');
            const tabContents = document.querySelectorAll('.tab-content');
            tabBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    tabBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    const tabId = btn.dataset.tab;
                    tabContents.forEach(content => {
                        if (content.id === tabId) {
                            content.classList.remove('hidden');
                            content.classList.add('active');
                        } else {
                            content.classList.add('hidden');
                            content.classList.remove('active');
                        }
                    });
                });
            });

            const navLinks = document.querySelectorAll('a.nav-link');
            const sections = document.querySelectorAll('div[id]');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            link.classList.toggle('active', link.getAttribute('href').substring(1) === entry.target.id);
                        });
                    }
                });
            }, { rootMargin: "-50% 0px -50% 0px" });

            sections.forEach(section => {
                observer.observe(section);
            });
        });
    </script>
</body>
</html>
